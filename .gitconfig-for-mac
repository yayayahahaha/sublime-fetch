    path = ~/go/src/gitlab.paradise-soft.com.tw/frontend/.gitconfig

[core]
	ignorecase = false
	autocrlf = false
	quotepath = false
    editor = vim
# editor = subl -n -w # 修改git 的預設編輯器, 像是commit 或是rebase 之類的
[rerere]
	enabled = false # reuse-recorded-resolution
