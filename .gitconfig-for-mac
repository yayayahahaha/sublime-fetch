[alias]
    st = status
    stt = status -sb
    ch = checkout
    br = branch
    bra = branch -av
    fp = "fetch --prune --prune-tags --tags --progress"
    au = "add :/ -u"
    gr = !"git lg1"
    gra = !"git lg1 --all"
    gr2 = !"git lg2"
    gra2 = !"git lg2 --all"
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold cyan)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(red)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lg2 = log --graph --abbrev-commit --decorate --date=local --format=format:'%C(bold green)%h%C(reset) - %C(bold cyan)%cd%C(reset) %C(bold cyan)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(red)- %an%C(reset)'
    df = diff HEAD^1 HEAD
    dft = difftool HEAD^1 HEAD
    dm = diff master...head
    ls = !"ls -al"
    brauth2 = "! for branch in `git branch -r | grep -v /HEAD`;do echo `git show --decorate --format=\"%an%C(bold green) %ai %ar by %an\" $branch | head -n 1` \t$branch; done | sort -r"
    brauth = "! for branch in `git branch -r | grep -v /HEAD`;do echo `git show --format=\"%an\" $branch | head -n 1` \t$branch; done | sort -r"
    tfp = "!git tag -l | xargs git tag -d; git fetch --tags"
    cma = commit -am
	root-path = "rev-parse --show-toplevel"
	sw = switch
    s = "!GIT_EDITOR=\"subl -n -w\" git " # 透過sublime text 3 開啟git editor

[merge]
    ff = false

