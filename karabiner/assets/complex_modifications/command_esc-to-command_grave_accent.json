{
  "title": "Command + Esc to Command + `",
  "rules": [
    {
      "description": "Command + Esc to Command + `",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Command + shift +  Esc to Command + shift + `",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command", "shift"]
            }
          ]
        }
      ]
    }
  ]
}
